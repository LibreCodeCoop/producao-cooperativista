{
    "type": "project",
    "license": "AGPL-3.0-or-later",
    "require": {
        "cmixin/business-day": "^1.16",
        "doctrine/dbal": "^3.5",
        "doctrine/migrations": "^3.6",
        "doctrine/orm": "^2.15",
        "doctrine/sql-formatter": "^1.1",
        "league/flysystem-webdav": "^3.15",
        "monolog/monolog": "^3.3",
        "phpoffice/phpspreadsheet": "^1.28",
        "symfony/browser-kit": "^6.2",
        "symfony/cache": "^6.3",
        "symfony/console": "^6.2",
        "symfony/css-selector": "^6.2",
        "symfony/http-client": "^6.2",
        "symfony/mime": "^6.2",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.8"
    },
    "autoload": {
        "psr-4": {
            "ProducaoCooperativista\\": "src/",
            "ProducaoCooperativista\\Migrations\\": "config/db/migrations"
        }
    },
    "bin" : [
        "bin/import"
    ],
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true
        }
    },
    "scripts": {
        "bin": "echo 'bin not installed'",
        "lint": "find . -name \\*.php -not -path './vendor/*' -not -path './vendor-bin/*' -print0 | xargs -0 -n1 php -l",
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "cs:fix": "php-cs-fixer fix",
        "psalm": "psalm --threads=1",
        "psalm:update-baseline": "psalm --threads=1 --update-baseline --set-baseline=tests/psalm-baseline.xml",
        "psalm:clear": "psalm --clear-cache && psalm --clear-global-cache"
    }
}
